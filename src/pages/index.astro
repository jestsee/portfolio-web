---
import Layout from '@layouts/Layout.astro'
import { Navbar } from '@components/Navbar'
import Intro from '@components/Intro'
import { Figure1 } from '@components/Figure1'
import { Figure2 } from '@components/Figure2'
---

<Layout title="Welcome to Astro.">
  <main class="mx-auto max-w-[1200px] text-smoke max-sm:pb-[800px] max-sm:px-8">
    <Navbar />
    <Intro />
    <Figure1 />
    <h3 class="max-w-[600px] mx-auto text-center my-20 font-bold max-sm:text-lg text-2xl">
      Lorem ipsum, dolor sit amet consectetur adipisicing elit. Doloremque
      praesentium necessitatibus neque <span class="text-teal-400"
        >delectus eligendi totam itaque.
      </span>
    </h3>
    <Figure2 />
  </main>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap');

  body {
    background-color: #101826;
    font-family: 'Inter', sans-serif;
  }
</style>
