---
import Layout from '@layouts/Layout.astro'
import { Navbar } from '@components/Navbar'
import Intro from '@components/Intro'
import { Figure1 } from '@components/Figure1'
import { Figure2 } from '@components/Figure2'
---

<Layout title="Welcome to Astro.">
  <main class="text-smoke">
    <Navbar client:load />
    <div class="mx-auto max-w-[1200px] pt-12 max-sm:pb-[800px] max-sm:px-8">
      <Intro />
      <Figure1 />
      <h3
        class="max-w-[600px] mx-auto text-center my-20 max-lg:mt-24 font-bold max-sm:text-lg text-2xl"
      >
        I enjoy designing things and deeply passionate in <span class="text-teal-400"
          >tech and design.
        </span>
      </h3>
      <Figure2 />
    </div>
  </main>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap');

  * {
    padding: 0;
    margin: 0;
    background-color: #101826;
    font-family: 'Inter', sans-serif;
  }
</style>
